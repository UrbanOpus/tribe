extends layout

block content
  h1 Triber
  #triber.container-fluid
    .col-md-6
      h3 UUID
      span #{data.uuid}
      h3 Tribe Enabled
      span #{data.tribeEnabled}

      h3 Questions Answered (#{questions.length})
      ul
        each q in questions
          li (#{moment(q.provideOn).format('l')}) #{q.content}
    .col-md-6 
        h2 Moods (#{moods.length})
        .row
          div.col-md-12
            table.table.table-striped#moodsTable
              thead
                tr
                  th Time
                  th value
              tbody#moodsBody
                each m in moods
                  tr
                    td #{m.createdAt}
                    td #{m.value}