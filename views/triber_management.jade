extends layout

block content
  h1 API Playground
  #triberContainer.container-fluid
      h2 Tribers
      .row
        div.col-md-12
          table.table.table-striped#triberTable
            thead
              tr
                th UUID
                th Gender
                th Nickname
                th Tribe Enabled
                th Toggle Tribe
                th Delete Triber
            tbody#triberBody

  script(type='text/template', id='tmpl-tribe-row')
    td
      a.triber-link(href="<%= url %>") <%= uuid %>
    td <%= gender %>
    td <%= nickname %>
    td <%= tribeEnabled %>
    td
      button.toggle-tribe(data-uuid="<%= _id %>")
        | Toggle Tribe
    td
      button.close.close-triber(data-uuid="<%= _id %>")
        | &times;

block scripts
  != js('src/managetriber')